<%- include('partials/header') %>

<!-- HERO SECTION -->
<div class="mb-12 relative">
    <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-neon-purple/20 rounded-full blur-[100px] pointer-events-none"></div>
    
    <div class="flex flex-col md:flex-row justify-between items-end gap-6 relative z-10">
        <div>
            <h2 class="text-5xl font-black text-white tracking-tight leading-none mb-2 text-shadow-glow">MARKET RADAR</h2>
            <p class="text-starlight/60 font-light text-lg tracking-wide border-l-2 border-neon-blue pl-4">Real-time intelligence operations.</p>
        </div>
        <div>
             <a href="/oracle" class="btn btn-primary rounded-full px-8 shadow-[0_0_20px_rgba(0,240,255,0.4)] text-black font-bold hover:scale-105 transition-transform">
                <i class="fas fa-plus mr-2"></i> NEW OPERATION
             </a>
        </div>
    </div>
</div>

<!-- OPPORTUNITIES GRID -->
<div class="mb-20 relative z-10">
    <% if (opportunities && opportunities.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% opportunities.forEach(opp => { %>
                <% const isLocked = (user && user.role === 'admin') ? false : true; %>
                <%- include('partials/opportunity_card', { opp: opp, isLocked: isLocked }) %>
            <% }) %>
        </div>
    <% } else { %>
        <div class="glass-card rounded-[2rem] border border-white/5 py-24 text-center flex flex-col items-center justify-center group hover:border-neon-blue/30 transition-colors">
            <div class="w-32 h-32 rounded-full bg-white/5 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500 relative">
                 <div class="absolute inset-0 border border-white/10 rounded-full animate-ping opacity-20"></div>
                <i class="fas fa-satellite-dish text-6xl text-starlight/20 group-hover:text-neon-blue transition-colors"></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">NO SIGNALS DETECTED</h3>
            <p class="text-starlight/50 max-w-md mx-auto mb-8 font-light">
                The radar is silent. Initiate a new scan to discover market opportunities.
            </p>
            <div>
                <a href="/oracle" class="btn btn-outline border-white/20 text-white hover:bg-neon-blue hover:text-black hover:border-neon-blue rounded-full px-8">
                    INITIATE SCAN
                </a>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
