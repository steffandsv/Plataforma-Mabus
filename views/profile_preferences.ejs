                async function importarCNPJ() {
                    const cnpj = document.getElementById('cnpj-input').value;
                    const btn = document.getElementById('btn-importar-cnpj');

                    if (!cnpj || cnpj.replace(/\D/g, '').length !== 14) {
                        alert('‚ö†Ô∏è Digite um CNPJ v√°lido (14 d√≠gitos)');
                        return;
                    }

                    btn.disabled = true;
                    btn.innerHTML = '<span class="loading loading-spinner loading-sm"></span> Consultando...';

                    try {
                        const response = await fetch('/api/cnpj/consultar', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ cnpj })
                        });

                        const result = await response.json();

                        if (!response.ok) {
                            throw new Error(result.erro || 'Erro ao consultar CNPJ');
                        }

                        if (result.sucesso) {
                            const saveResponse = await fetch('/api/cnpj/salvar', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ cnpj })
                            });

                            const saveResult = await saveResponse.json();

                            if (saveResult.sucesso) {
                                atualizarPreview(saveResult.dados);
                                showToast('‚úÖ Dados do CNPJ importados e salvos com sucesso!', 'success');
                            } else {
                                throw new Error(saveResult.erro || 'Erro ao salvar dados');
                            }
                        }

                    } catch (erro) {
                        console.error('[CNPJ Import Error]:', erro);

                        let mensagemErro = '‚ùå Erro ao importar CNPJ: ';
                        if (erro.message.includes('404') || erro.message.includes('n√£o encontrado')) {
                            mensagemErro += 'CNPJ n√£o encontrado na Receita Federal';
                        } else if (erro.message.includes('429') || erro.message.includes('limite')) {
                            mensagemErro += 'Limite de requisi√ß√µes excedido. Aguarde alguns segundos.';
                        } else if (erro.message.includes('timeout')) {
                            mensagemErro += 'Tempo esgotado. Tente novamente.';
                        } else {
                            mensagemErro += erro.message;
                        }

                        showToast(mensagemErro, 'error');
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-download"></i> Importar Dados';
                    }
                }

                function atualizarPreview(dados) {
                    const preview = document.getElementById('cnpj-preview');
                    preview.classList.remove('hidden');

                    document.getElementById('preview-razao').textContent = dados.razaoSocial || '-';
                    document.getElementById('preview-fantasia').textContent = dados.nomeFantasia || '-';
                    document.getElementById('preview-cnae').textContent =
                        dados.cnaePrincipal?.codigo
                            ? `${dados.cnaePrincipal.codigo} - ${dados.cnaePrincipal.descricao}`
                            : '-';
                    document.getElementById('preview-local').textContent =
                        `${dados.endereco?.municipio || ''} / ${dados.endereco?.uf || ''}`.trim() || '-';
                    document.getElementById('preview-porte').textContent = dados.porteEmpresa || '-';
                    document.getElementById('preview-situacao').textContent = dados.situacaoCadastral || '-';
                }
                async function savePreferences() {
                    const btn = document.getElementById('btn-save-prefs');
                    const originalText = btn.innerHTML;

                    try {
                        btn.disabled = true;
                        btn.innerHTML = '<span class="loading loading-spinner loading-sm"></span> Salvando...';

                        // Gather data manually to ensure everything is captured
                        const keywords = document.getElementById('keywords-hidden').value;
                        const municipios = document.getElementById('municipios-hidden')?.value || ''; // Add null check just in case

                        // Get UFs
                        const ufs = [];
                        document.querySelectorAll('input[name="preferred_ufs"]:checked').forEach(cb => ufs.push(cb.value));

                        // Get Modalidades
                        const modalidades = [];
                        document.querySelectorAll('input[name="preferred_modalidades"]:checked').forEach(cb => modalidades.push(cb.value));

                        // Get values
                        const minValue = document.querySelector('input[name="min_value"]').value;
                        const maxValue = document.querySelector('input[name="max_value"]').value;

                        // View preferences removed

                        const payload = {
                            keywords,
                            preferred_municipios: municipios,
                            preferred_ufs: ufs,
                            preferred_modalidades: modalidades,
                            min_value: minValue,
                            max_value: maxValue
                        };

                        const response = await fetch('/profile/preferences', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(payload)
                        });

                        if (response.redirected) {
                            window.location.href = response.url;
                            return;
                        }

                        // If backend returns JSON success instead of redirect
                        const result = await response.json().catch(() => ({}));

                        if (response.ok) {
                            showToast('‚úÖ Prefer√™ncias salvas com sucesso!', 'success');
                            setTimeout(() => window.location.reload(), 1000);
                        } else {
                            throw new Error(result.error || 'Erro ao salvar');
                        }

                    } catch (error) {
                        console.error('Save Error:', error);
                        // If it's a redirect that looked like an error (sometimes happens with basic auth redirects), reload
                        if (error.message.includes('Unexpected token')) {
                            window.location.reload();
                            return;
                        }
                        showToast('‚ùå Erro ao salvar: ' + error.message, 'error');
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }
                }
