                }

                // ========== AI REFINEMENT FUNCTIONS ==========

                let hasRefinedKeywords = false;

                function openRefineModal() {
                    if (hasRefinedKeywords) {
                        showToast('Voc√™ j√° refinou as palavras-chave uma vez. Edite manualmente se precisar ajustar mais.', 'info');
                        return;
                    }
                    document.getElementById('refine-modal').showModal();
                }

                function closeRefineModal() {
                    document.getElementById('refine-modal').close();
                    document.getElementById('refine-feedback').value = '';
                }

                async function refineWithAI() {
                    const feedback = document.getElementById('refine-feedback').value.trim();

                    if (!feedback) {
                        alert('Por favor, descreva o que voc√™ gostaria de mudar');
                        return;
                    }

                    // Get current keywords
                    const currentKeywords = document.getElementById('keywords-hidden').value.split(',').filter(k => k);

                    if (currentKeywords.length === 0) {
                        alert('N√£o h√° palavras-chave para refinar. Use o modo m√°gico primeiro.');
                        return;
                    }

                    // Show loading
                    document.getElementById('refine-form').classList.add('hidden');
                    document.getElementById('refine-loading').classList.remove('hidden');

                    try {
                        const response = await fetch('/api/cnpj/refine-keywords', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                current_keywords: currentKeywords,
                                feedback: feedback
                            })
                        });

                        const result = await response.json();

                        if (!response.ok || !result.sucesso) {
                            throw new Error(result.erro || 'Erro ao refinar palavras-chave');
                        }

                        // Update keywords
                        const newKeywords = result.keywords;
                        const hiddenInput = document.getElementById('keywords-hidden');
                        const container = document.getElementById('keywords-container');

                        hiddenInput.value = newKeywords.join(',');
                        container.innerHTML = '';

                        newKeywords.forEach(keyword => {
                            const tag = document.createElement('span');
                            tag.className = 'badge badge-lg gap-2 keyword-tag';
                            tag.innerHTML = `
                                ${keyword}
                                <button type="button" onclick="removeKeyword(this, '${keyword}')" 
                                    class="btn btn-ghost btn-xs btn-circle">√ó</button>
                            `;
                            container.appendChild(tag);
                        });

