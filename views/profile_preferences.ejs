                        // Step 1: Obtendo dados (in√≠cio da chamada)
                        updateThinkingStep(1);

                        // Step 2: Enviando para IA
                        updateThinkingStep(2);
                        await new Promise(resolve => setTimeout(resolve, 200));

                        // Step 3: Raciocinando (este √© o passo que demora - acontece no servidor)
                        updateThinkingStep(3);

                        // Make API call (THIS is where the actual waiting happens)
                        const response = await fetch('/api/cnpj/analyze-magic', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ cnpj })
                        });

                        const result = await response.json();

                        if (!response.ok || !result.sucesso) {
                            throw new Error(result.erro || 'Erro ao analisar CNPJ');
                        }

                        // Step 4: Recebendo resposta (API j√° respondeu)
                        updateThinkingStep(4);
                        await new Promise(resolve => setTimeout(resolve, 500));

                        // Mark all as done
                        document.querySelectorAll('.step').forEach(step => {
                            step.classList.remove('active');
                            step.classList.add('done');
                            step.querySelector('.step-icon').textContent = '‚úì';
                        });

                        await new Promise(resolve => setTimeout(resolve, 500));

                        // Store preferences
                        aiGeneratedPrefs = result.preferences;

                        // Show result
                        showAIResult(result);

                    } catch (erro) {
                        console.error('[AI Analysis Error]:', erro);
                        showError('Erro ao analisar com IA: ' + erro.message);

                        // Reset UI
                        document.getElementById('ai-thinking').classList.add('hidden');
                        document.getElementById('magic-input-area').classList.remove('hidden');

                        // Reset steps
                        document.querySelectorAll('.step').forEach(step => {
                            step.classList.remove('active', 'done');
                        });
                    }
                }

                function updateThinkingStep(stepIndex) {
                    const steps = document.querySelectorAll('.step');

                    // Mark previous steps as done
                    for (let i = 0; i < stepIndex; i++) {
                        steps[i].classList.remove('active');
                        steps[i].classList.add('done');
                        steps[i].querySelector('.step-icon').textContent = '‚úì';
                    }

                    // Mark current step as active
                    if (stepIndex < steps.length) {
                        steps[stepIndex].classList.add('active');
                        steps[stepIndex].classList.remove('done');
                    }
                }

                // Old animation function removed - now using updateThinkingStep

                function showAIResult(result) {
                    const { cnpjData, preferences } = result;

