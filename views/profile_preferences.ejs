                    } catch (erro) {
                        console.error('[Refine Error]:', erro);
                        showError('Erro ao refinar: ' + erro.message);

                        // Reset UI
                        document.getElementById('refine-form').classList.remove('hidden');
                        document.getElementById('refine-loading').classList.add('hidden');
                    }
                }

                function showError(message) {
                    showToast(message, 'error');
