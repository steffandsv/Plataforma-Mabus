                // CNPJ Mask (for magic mode)
                const magicCnpjInput = document.getElementById('magic-cnpj-input');
                if (magicCnpjInput) {
                    magicCnpjInput.addEventListener('input', (e) => {
                        let valor = e.target.value.replace(/\D/g, '');

                        if (valor.length <= 14) {
                            valor = valor.replace(/^(\d{2})(\d)/, '$1.$2');
                            valor = valor.replace(/^(\d{2})\.(\d{3})(\d)/, '$1.$2.$3');
                            valor = valor.replace(/\.(\d{3})(\d)/, '.$1/$2');
