                        hasRefinedKeywords = true;
                        window.hasRefinedKeywords = true;

                        // Hide banner
                        document.getElementById('ai-refine-banner').classList.add('hidden');

                        // Close modal
                        closeRefineModal();

                        // Reset UI
                        document.getElementById('refine-form').classList.remove('hidden');
                        document.getElementById('refine-loading').classList.add('hidden');

