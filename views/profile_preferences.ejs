                    height: 100px;
                    border-radius: 50%;
                    background: radial-gradient(circle at 30% 30%, #00f0ff, #7000ff, #ff00ea);
                    animation: orb-float 3s ease-in-out infinite, orb-pulse 2s ease-in-out infinite;
                    box-shadow: 0 0 80px rgba(0, 240, 255, 0.9);
                }

                @keyframes orb-float {

                    0%,
                    100% {
                        transform: translateY(0) scale(1);
                    }

                    50% {
                        transform: translateY(-30px) scale(1.1);
                    }
                }

                @keyframes orb-pulse {

                    0%,
                    100% {
                        opacity: 0.9;
                    }

                    50% {
                        opacity: 1;
                    }
                }

                .step {
                    opacity: 0.4;
                    transition: all 0.5s ease;
                }

                .step.active {
                    opacity: 1;
                }

                .step.done {
                    opacity: 1;
                    color: #4ade80;
                }

                .step.active .step-icon {
                    animation: pulse 1s infinite;
                }

                .step.done .step-icon {
