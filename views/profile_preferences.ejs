            <script>
                // State
                let aiGeneratedPrefs = null;
                let currentMode = 'magic';

                // ========== KEYWORD TAGS FUNCTIONS ==========

                // Add keyword tag
                function addKeyword() {
                    const input = document.getElementById('keyword-input');
                    const keyword = input.value.trim();

                    if (!keyword) return;

                    const container = document.getElementById('keywords-container');
                    const hiddenInput = document.getElementById('keywords-hidden');

                    // Get current keywords
                    const currentKeywords = hiddenInput.value ? hiddenInput.value.split(',') : [];

                    // Check if already exists
                    if (currentKeywords.includes(keyword)) {
                        input.value = '';
                        return;
                    }

                    // Add new keyword
                    currentKeywords.push(keyword);
                    hiddenInput.value = currentKeywords.join(',');

                    // Create tag element
                    const tag = document.createElement('span');
                    tag.className = 'badge badge-lg gap-2 keyword-tag';
                    tag.innerHTML = `
                        ${keyword}
                        <button type="button" onclick="removeKeyword(this, '${keyword}')" 
                            class="btn btn-ghost btn-xs btn-circle">√ó</button>
                    `;

                    container.appendChild(tag);
                    input.value = '';
                }

                // Remove keyword tag
                function removeKeyword(button, keyword) {
                    const hiddenInput = document.getElementById('keywords-hidden');
                    let keywords = hiddenInput.value ? hiddenInput.value.split(',') : [];

                    keywords = keywords.filter(k => k !== keyword);
                    hiddenInput.value = keywords.join(',');

                    button.closest('.keyword-tag').remove();
                }

                // Allow Enter key to add keyword
                const keywordInput = document.getElementById('keyword-input');
                if (keywordInput) {
                    keywordInput.addEventListener('keypress', (e) => {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            addKeyword();
                        }
                    });
                }

                // ========== MUNICIPALITY TAGS FUNCTIONS ==========

                function addMunicipio() {
                    const input = document.getElementById('municipio-input');
                    const municipio = input.value.trim();

                    if (!municipio) return;

                    const container = document.getElementById('municipios-container');
                    const hiddenInput = document.getElementById('municipios-hidden');

                    const current = hiddenInput.value ? hiddenInput.value.split(',') : [];

                    if (current.includes(municipio)) {
                        input.value = '';
                        return;
                    }

                    current.push(municipio);
                    hiddenInput.value = current.join(',');

                    const tag = document.createElement('span');
                    tag.className = 'badge badge-primary gap-1';
                    tag.innerHTML = `
                        ${municipio}
                        <button type="button" onclick="removeMunicipio(this, '${municipio}')" 
                            class="btn btn-ghost btn-xs btn-circle">√ó</button>
                    `;

                    container.appendChild(tag);
                    input.value = '';
                }

                function removeMunicipio(button, municipio) {
                    const hiddenInput = document.getElementById('municipios-hidden');
                    let municipios = hiddenInput.value ? hiddenInput.value.split(',') : [];

                    municipios = municipios.filter(m => m !== municipio);
                    hiddenInput.value = municipios.join(',');

                    button.closest('.badge').remove();
                }

                const municipioInput = document.getElementById('municipio-input');
                if (municipioInput) {
                    municipioInput.addEventListener('keypress', (e) => {
                        if (e.key === 'Enter') {
                            e.preventDefault();
                            addMunicipio();
                        }
                    });
                }

                // ========== VALUE FILTER TOGGLE ==========

                function toggleValueFilter() {
                    const toggle = document.getElementById('value-filter-toggle');
                    const fields = document.getElementById('value-filter-fields');
                    const minInput = document.getElementById('min-value-input');
                    const maxInput = document.getElementById('max-value-input');

                    if (toggle.checked) {
                        fields.classList.remove('hidden');
