                // Analyze with AI
                async function analyzeWithAI() {
                    const cnpj = document.getElementById('magic-cnpj-input').value;
                    const btn = document.getElementById('btn-analyze-magic');

                    if (!cnpj || cnpj.replace(/\D/g, '').length !== 14) {
                        alert('‚ö†Ô∏è Digite um CNPJ v√°lido (14 d√≠gitos)');
                        return;
                    }

                    // Hide input, show thinking
                    document.getElementById('magic-input-area').classList.add('hidden');
                    document.getElementById('ai-thinking').classList.remove('hidden');

                    //Animate steps
                    animateThinkingSteps();

                    try {
                        const response = await fetch('/api/cnpj/analyze-magic', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ cnpj })
                        });

                        const result = await response.json();

                        if (!response.ok || !result.sucesso) {
                            throw new Error(result.erro || 'Erro ao analisar CNPJ');
                        }

                        // Wait for animations to complete
                        await new Promise(resolve => setTimeout(resolve, 1500));

                        // Store preferences
                        aiGeneratedPrefs = result.preferences;

                        // Show result
                        showAIResult(result);

                    } catch (erro) {
                        console.error('[AI Analysis Error]:', erro);
                        showError('Erro ao analisar com IA: ' + erro.message);

                        // Reset UI
                        document.getElementById('ai-thinking').classList.add('hidden');
                        document.getElementById('magic-input-area').classList.remove('hidden');
                    }
                }

                function animateThinkingSteps() {
                    const steps = document.querySelectorAll('.step');
                    let currentStep = 0;

                    const interval = setInterval(() => {
                        if (currentStep > 0) {
                            const prevStep = steps[currentStep - 1];
                            prevStep.classList.remove('active');
                            prevStep.classList.add('done');
                            prevStep.querySelector('.step-icon').textContent = '‚úì';
                        }

                        if (currentStep < steps.length) {
                            steps[currentStep].classList.add('active');
                            currentStep++;
                        } else {
                            clearInterval(interval);
                        }
                    }, 1200);

                    // Store interval ID to clear if needed
                    window.thinkingInterval = interval;
                }

                function showAIResult(result) {
                    const { cnpjData, preferences } = result;

                    // Hide thinking, show result
                    document.getElementById('ai-thinking').classList.add('hidden');
                    document.getElementById('ai-result').classList.remove('hidden');

                    // Populate result
                    document.getElementById('result-company-name').textContent = cnpjData.razaoSocial || cnpjData.nomeFantasia;
                    document.getElementById('result-cnae').textContent =
                        `${cnpjData.cnaePrincipal?.codigo} - ${cnpjData.cnaePrincipal?.descricao}`;
                    document.getElementById('result-location').textContent =
                        `${cnpjData.municipio} / ${cnpjData.uf}`;
                    document.getElementById('ai-reasoning').textContent = preferences.reasoning;
                    document.getElementById('result-keywords-count').textContent = preferences.keywords.length;
                    document.getElementById('result-states-count').textContent = preferences.preferred_ufs.length;
                }

                function applyAndShowManual() {
                    if (!aiGeneratedPrefs) return;

                    const prefs = aiGeneratedPrefs;

                    // Fill keywords
                    const keywordsInput = document.querySelector('[name="keywords"]');
                    if (keywordsInput) {
                        keywordsInput.value = prefs.keywords.join(', ');
                    }

                    // Check UF checkboxes
                    document.querySelectorAll('[name="preferred_ufs"]').forEach(checkbox => {
                        checkbox.checked = prefs.preferred_ufs.includes(checkbox.value);
                    });

                    // Fill municipios
                    const municipiosInput = document.querySelector('[name="preferred_municipios"]');
                    if (municipiosInput && prefs.preferred_municipios) {
                        municipiosInput.value = prefs.preferred_municipios.join(', ');
                    }

                    // Check modalidades
                    document.querySelectorAll('[name="preferred_modalidades"]').forEach(checkbox => {
                        checkbox.checked = prefs.preferred_modalidades.includes(checkbox.value);
                    });

                    // Set values
                    const minValueInput = document.querySelector('[name="min_value"]');
                    if (minValueInput) minValueInput.value = prefs.min_value;

                    const maxValueInput = document.querySelector('[name="max_value"]');
                    if (maxValueInput) maxValueInput.value = prefs.max_value;

                    // Switch to manual mode
                    switchMode('manual');

                    // Show toast
                    showToast('‚ú® Prefer√™ncias aplicadas! Revise e salve quando estiver pronto.', 'success');
                }

                function showError(message) {
                    showToast(message, 'error');
                }

                function showToast(texto, tipo = 'info') {
                    // Create toast
                    const toast = document.createElement('div');
                    toast.className = `alert alert-${tipo} shadow-lg fixed top-20 right-4 w-auto max-w-md z-50`;
                    toast.style.animation = 'slideInRight 0.3s ease-out';
                    toast.innerHTML = `
                    <div>
                        <span>${texto}</span>
                    </div>
                `;

                    document.body.appendChild(toast);

                    // Remove after 5 seconds
                    setTimeout(() => {
                        toast.style.animation = 'slideOutRight 0.3s ease-in';
                        setTimeout(() => toast.remove(), 300);
                    }, 5000);
                }

                // Original CNPJ Section scripts
                const cnpjInput = document.getElementById('cnpj-input');
                if (cnpjInput) {
                    cnpjInput.addEventListener('input', (e) => {
                        let valor = e.target.value.replace(/\D/g, '');

                        if (valor.length <= 14) {
                            valor = valor.replace(/^(\d{2})(\d)/, '$1.$2');
                            valor = valor.replace(/^(\d{2})\.(\d{3})(\d)/, '$1.$2.$3');
                            valor = valor.replace(/\.(\d{3})(\d)/, '.$1/$2');
                            valor = valor.replace(/(\d{4})(\d)/, '$1-$2');
                        }

                        e.target.value = valor;
                    });
                }

                async function importarCNPJ() {
                    const cnpj = document.getElementById('cnpj-input').value;
                    const btn = document.getElementById('btn-importar-cnpj');

                    if (!cnpj || cnpj.replace(/\D/g, '').length !== 14) {
                        alert('‚ö†Ô∏è Digite um CNPJ v√°lido (14 d√≠gitos)');
                        return;
                    }

                    btn.disabled = true;
                    btn.innerHTML = '<span class="loading loading-spinner loading-sm"></span> Consultando...';

                    try {
                        const response = await fetch('/api/cnpj/consultar', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ cnpj })
                        });

                        const result = await response.json();

                        if (!response.ok) {
                            throw new Error(result.erro || 'Erro ao consultar CNPJ');
                        }

                        if (result.sucesso) {
                            const saveResponse = await fetch('/api/cnpj/salvar', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ cnpj })
                            });

                            const saveResult = await saveResponse.json();

                            if (saveResult.sucesso) {
                                atualizarPreview(saveResult.dados);
                                showToast('‚úÖ Dados do CNPJ importados e salvos com sucesso!', 'success');
                            } else {
                                throw new Error(saveResult.erro || 'Erro ao salvar dados');
                            }
                        }

                    } catch (erro) {
                        console.error('[CNPJ Import Error]:', erro);

                        let mensagemErro = '‚ùå Erro ao importar CNPJ: ';
                        if (erro.message.includes('404') || erro.message.includes('n√£o encontrado')) {
                            mensagemErro += 'CNPJ n√£o encontrado na Receita Federal';
                        } else if (erro.message.includes('429') || erro.message.includes('limite')) {
                            mensagemErro += 'Limite de requisi√ß√µes excedido. Aguarde alguns segundos.';
                        } else if (erro.message.includes('timeout')) {
                            mensagemErro += 'Tempo esgotado. Tente novamente.';
                        } else {
                            mensagemErro += erro.message;
                        }

                        showToast(mensagemErro, 'error');
                    } finally {
                        btn.disabled = false;
                        btn.innerHTML = '<i class="fas fa-download"></i> Importar Dados';
                    }
                }

                function atualizarPreview(dados) {
                    const preview = document.getElementById('cnpj-preview');
                    preview.classList.remove('hidden');

                    document.getElementById('preview-razao').textContent = dados.razaoSocial || '-';
                    document.getElementById('preview-fantasia').textContent = dados.nomeFantasia || '-';
                    document.getElementById('preview-cnae').textContent =
                        dados.cnaePrincipal?.codigo
                            ? `${dados.cnaePrincipal.codigo} - ${dados.cnaePrincipal.descricao}`
                            : '-';
                    document.getElementById('preview-local').textContent =
                        `${dados.endereco?.municipio || ''} / ${dados.endereco?.uf || ''}`.trim() || '-';
                    document.getElementById('preview-porte').textContent = dados.porteEmpresa || '-';
                    document.getElementById('preview-situacao').textContent = dados.situacaoCadastral || '-';
                }
