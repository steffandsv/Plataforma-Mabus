<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
    <!-- Header Section -->
    <div class="mb-12 text-center relative">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-neon-blue/20 rounded-full blur-[60px] animate-pulse-slow z-0"></div>
        <h2 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-starlight to-white relative z-10 tracking-tight">OPERATIONAL DASHBOARD</h2>
        <p class="text-starlight/50 font-mono text-sm tracking-widest mt-2 uppercase relative z-10">Real-time Quotation Stream</p>
    </div>

    <!-- Filters -->
    <div class="flex justify-end mb-8">
        <form method="GET" action="/dashboard" class="flex items-center">
            <div class="glass-panel px-4 py-2 rounded-full flex items-center gap-3 transition-all hover:bg-white/5">
                <span class="text-xs font-bold text-neon-blue uppercase tracking-wider">Archives</span>
                <input type="checkbox" class="toggle toggle-info toggle-sm bg-black/50 border-white/10 hover:bg-black/70" id="showArchived" name="show_archived" value="true" <%= showArchived ? 'checked' : '' %> onchange="this.form.submit()" />
            </div>
        </form>
    </div>

    <!-- Main Content -->
    <div class="mb-12 min-h-[50vh]">
        <div class="flex flex-col gap-6">
             <% if (tasks && tasks.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-fr">
                    <%- include('partials/task_list', { tasks: tasks }) %>
                </div>
             <% } else { %>
                <div class="flex flex-col items-center justify-center py-20 glass-panel rounded-3xl border-dashed border-2 border-white/5">
                    <div class="w-16 h-16 rounded-full bg-white/5 flex items-center justify-center mb-4">
                        <i class="fas fa-wind text-2xl text-starlight/30"></i>
                    </div>
                    <h4 class="text-xl font-bold text-starlight/70">No active operations</h4>
                    <p class="text-sm text-starlight/30 mb-6 font-mono">Stream is currently empty</p>
                    <a href="/sniper" class="btn btn-primary btn-outline gap-2 group">
                        <i class="fas fa-plus group-hover:rotate-90 transition-transform"></i>
                        Initialize new operation
                    </a>
                </div>
             <% } %>
        </div>

        <!-- Pagination -->
        <div class="mt-12 flex justify-center gap-4">
            <% if (page > 1) { %>
                <a href="/dashboard?page=<%= page - 1 %><%= showArchived ? '&show_archived=true' : '' %>" class="btn btn-circle btn-ghost text-starlight hover:text-neon-blue hover:bg-white/5 disabled">
                    <i class="fas fa-chevron-left"></i>
                </a>
            <% } %>
            
            <span class="btn btn-sm btn-ghost no-animation text-starlight/50 font-mono">PAGE <%= page %></span>

            <% if (hasNext) { %>
                <a href="/dashboard?page=<%= page + 1 %><%= showArchived ? '&show_archived=true' : '' %>" class="btn btn-circle btn-ghost text-starlight hover:text-neon-blue hover:bg-white/5">
                    <i class="fas fa-chevron-right"></i>
                </a>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
