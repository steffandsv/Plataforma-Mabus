<% tasks.forEach(task => { %>
    <div class="glass-card group relative overflow-hidden rounded-2xl border border-white/5 cursor-pointer transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,240,255,0.15)] hover:border-neon-blue/30" onclick="window.location='/task/<%= task.id %>'">
        
        <!-- Hover Gradient Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-neon-blue/5 to-neon-purple/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

        <div class="relative p-6 flex flex-col h-full z-10">
            <div class="flex justify-between items-start mb-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl flex items-center justify-center 
                        <%= task.status === 'completed' ? 'bg-success/20 text-success shadow-[0_0_15px_rgba(52,199,89,0.3)]' :
                           (task.status === 'failed' || task.status === 'aborted' ? 'bg-error/20 text-error shadow-[0_0_15px_rgba(255,59,48,0.3)]' :
                           (task.status === 'running' ? 'bg-info/20 text-info shadow-[0_0_15px_rgba(0,240,255,0.3)] animate-pulse' : 'bg-white/10 text-starlight')) %>">
                        <i class="fas <%= task.status === 'completed' ? 'fa-check' : (task.status === 'running' ? 'fa-bolt' : 'fa-cube') %>"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-lg text-white group-hover:text-neon-blue transition-colors line-clamp-1"><%= task.name %></h3>
                        <span class="text-xs text-starlight/50 font-mono tracking-wider"><%= task.id.substring(0,8) %></span>
                    </div>
                </div>
                
                <div class="badge border-0 font-bold uppercase tracking-wider text-[10px] py-3 px-3
                    <%= task.status === 'completed' ? 'bg-success/20 text-success' :
                       (task.status === 'failed' || task.status === 'aborted' ? 'bg-error/20 text-error' :
                       (task.status === 'running' ? 'bg-info/20 text-info animate-pulse' : 'bg-white/10 text-starlight')) %>">
                    <%= task.status %>
                </div>
            </div>

            <div class="mt-auto space-y-3">
                <div class="flex items-center gap-2 text-sm text-starlight/70">
                    <i class="fas fa-map-marker-alt w-4 text-center text-neon-purple"></i>
                    <span class="font-medium"><%= task.cep %></span>
                </div>
                <div class="flex items-center gap-2 text-sm text-starlight/70">
                    <i class="far fa-calendar-alt w-4 text-center text-neon-blue"></i>
                    <span class="font-medium"><%= new Date(task.created_at).toLocaleDateString() %></span>
                </div>
            </div>

             <div class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-neon-blue/50 to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
        </div>
    </div>
<% }) %>
