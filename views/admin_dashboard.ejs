<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
    <!-- Admin Header -->
    <div class="mb-12">
        <h2 class="text-3xl font-bold text-white mb-2 flex items-center gap-3">
            <i class="fas fa-user-shield text-neon-purple text-4xl"></i>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-starlight">Admin Command Center</span>
        </h2>
        <p class="text-starlight/50 font-mono text-sm tracking-widest pl-1">System Management & User Control</p>
    </div>

    <!-- Alerts -->
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success bg-success/10 border-success/20 text-success mb-6 backdrop-blur-md">
            <i class="fas fa-check-circle"></i> <span><%= success %></span>
        </div>
    <% } %>
    <% if (error && error.length > 0) { %>
        <div class="alert alert-error bg-error/10 border-error/20 text-error mb-6 backdrop-blur-md">
            <i class="fas fa-exclamation-circle"></i> <span><%= error %></span>
        </div>
    <% } %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- Create Group -->
        <div class="glass-card p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <i class="fas fa-users text-neon-blue"></i> Create Group
            </h3>
            <form action="/admin/groups" method="POST" class="space-y-4">
                <div class="form-control">
                    <input type="text" name="name" class="input input-bordered bg-black/20 border-white/10 focus:border-neon-blue text-white" placeholder="Group Name" required>
                </div>
                <div class="form-control">
                    <input type="text" name="description" class="input input-bordered bg-black/20 border-white/10 focus:border-neon-blue text-white" placeholder="Description">
                </div>
                <button type="submit" class="btn btn-primary w-full bg-neon-blue/20 border-neon-blue/50 text-neon-blue hover:bg-neon-blue/40 tracking-wider">CREATE NODE</button>
            </form>
        </div>

        <!-- Add Credits -->
        <div class="glass-card p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <i class="fas fa-bolt text-warning"></i> Manage Credits
            </h3>
            <form action="/admin/credits" method="POST" class="space-y-4">
                <select name="user_id" class="select select-bordered w-full bg-black/20 border-white/10 focus:border-warning text-starlight" required>
                    <option value="" disabled selected>Select Operator</option>
                    <% users.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.username %> (<%= u.current_credits %>)</option>
                    <% }) %>
                </select>
                <input type="number" name="amount" class="input input-bordered w-full bg-black/20 border-white/10 focus:border-warning text-white" placeholder="Amount (+/-)" required>
                <input type="text" name="reason" class="input input-bordered w-full bg-black/20 border-white/10 focus:border-warning text-white" placeholder="Reason (Audit Log)" required>
                <button type="submit" class="btn btn-warning w-full bg-warning/20 border-warning/50 text-warning hover:bg-warning/40 tracking-wider">AUTHORIZE TRANSFER</button>
            </form>
        </div>

        <!-- Assign Group -->
        <div class="glass-card p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
                <i class="fas fa-link text-neon-purple"></i> Assign Role
            </h3>
            <form action="/admin/users/assign_group" method="POST" class="space-y-4">
                <select name="user_id" class="select select-bordered w-full bg-black/20 border-white/10 focus:border-neon-purple text-starlight" required>
                    <option value="" disabled selected>Select Operator</option>
                    <% users.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.username %></option>
                    <% }) %>
                </select>
                <select name="group_id" class="select select-bordered w-full bg-black/20 border-white/10 focus:border-neon-purple text-starlight" required>
                    <option value="" disabled selected>Select Group</option>
                    <% groups.forEach(g => { %>
                        <option value="<%= g.id %>"><%= g.name %></option>
                    <% }) %>
                </select>
                <button type="submit" class="btn btn-secondary w-full bg-neon-purple/20 border-neon-purple/50 text-neon-purple hover:bg-neon-purple/40 tracking-wider">LINK ENTITY</button>
            </form>
        </div>
    </div>

    <!-- Users List -->
    <div class="glass-card p-6 mb-8 overflow-hidden">
        <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-2">
            <i class="fas fa-list text-starlight"></i> Active Operators
        </h3>
        <div class="overflow-x-auto">
            <table class="table w-full">
                <thead>
                    <tr class="text-starlight/50 border-b border-white/10">
                        <th class="bg-transparent">ID</th>
                        <th class="bg-transparent">OPERATOR</th>
                        <th class="bg-transparent">NAME</th>
                        <th class="bg-transparent">ENERGY</th>
                        <th class="bg-transparent">BATTALION</th>
                        <th class="bg-transparent text-right">OVERRIDE</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(u => { %>
                        <tr class="border-b border-white/5 hover:bg-white/5 transition-colors">
                            <td class="font-mono text-xs opacity-50"><%= u.id %></td>
                            <td class="font-bold text-white"><%= u.username %></td>
                            <td class="text-starlight/70"><%= u.full_name || '-' %></td>
                            <td class="font-mono text-warning font-bold"><%= u.current_credits %> âš¡</td>
                            <td>
                                <span class="badge <%= u.role === 'admin' ? 'badge-error' : (u.role === 'moderator' ? 'badge-warning' : 'badge-ghost') %> badge-sm uppercase">
                                    <%= u.role %>
                                </span>
                            </td>
                            <td class="text-right">
                                <form action="/admin/users/role" method="POST" class="inline-block">
                                    <input type="hidden" name="id" value="<%= u.id %>">
                                    <select name="role" onchange="this.form.submit()" class="select select-ghost select-xs text-xs font-normal h-8 min-h-0 bg-white/5 border-white/10 focus:bg-black">
                                        <option value="user" <%= u.role === 'user' ? 'selected' : '' %>>User</option>
                                        <option value="moderator" <%= u.role === 'moderator' ? 'selected' : '' %>>Mod</option>
                                        <option value="admin" <%= u.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                    </select>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Groups List -->
    <div class="glass-card p-6">
        <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-2">
            <i class="fas fa-layer-group text-starlight"></i> Neural Groups
        </h3>
        <div class="overflow-x-auto">
            <table class="table w-full">
                <thead>
                    <tr class="text-starlight/50 border-b border-white/10">
                        <th class="bg-transparent">ID</th>
                        <th class="bg-transparent">DESIGNATION</th>
                        <th class="bg-transparent">DESCRIPTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% groups.forEach(g => { %>
                        <tr class="border-b border-white/5 hover:bg-white/5 transition-colors">
                            <td class="font-mono text-xs opacity-50"><%= g.id %></td>
                            <td class="font-bold text-neon-blue"><%= g.name %></td>
                            <td class="text-starlight/70 italic"><%= g.description %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</div>

<%- include('partials/footer') %>
